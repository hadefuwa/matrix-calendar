<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
           xsi:type="MailApp">

  <!-- Basic Add-in Information -->
  <Id>12345678-1234-1234-1234-123456789012</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Matrix TSL</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- Add-in Display Information -->
  <DisplayName DefaultValue="Matrix Calendar"/>
  <Description DefaultValue="View meeting room calendars in a convenient side panel"/>
  <IconUrl DefaultValue="https://hadefuwa.github.io/matrix-calendar/outlook-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://hadefuwa.github.io/matrix-calendar/outlook-addin/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://github.com/your-username/matrix-calendar-addin"/>

  <!-- Supported Outlook Clients -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Permissions -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://hadefuwa.github.io/matrix-calendar/outlook-addin/index.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Permissions -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Version Overrides for Modern Outlook -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        
        <!-- Desktop Form Factor -->
        <DesktopFormFactor>
          <!-- Function File (not needed for our simple add-in) -->
          
          <!-- Extension Points -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                
                <!-- Task Pane Button -->
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
          <!-- Appointment Organizer Extension Point -->
          <ExtensionPoint xsi:type="AppointmentOrganizerCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="apptOrganizerGroup">
                <Label resid="GroupLabel"/>
                
                <Control xsi:type="Button" id="apptOrganizerOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://hadefuwa.github.io/matrix-calendar/outlook-addin/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://hadefuwa.github.io/matrix-calendar/outlook-addin/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://hadefuwa.github.io/matrix-calendar/outlook-addin/assets/icon-80.png"/>
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://hadefuwa.github.io/matrix-calendar/outlook-addin/index.html"/>
      </bt:Urls>
      
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Matrix Calendar"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Room Calendars"/>
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="View meeting room calendars"/>
      </bt:LongStrings>
    </Resources>
    
  </VersionOverrides>
</OfficeApp>
